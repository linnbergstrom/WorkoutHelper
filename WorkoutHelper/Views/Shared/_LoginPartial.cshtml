@using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
        {
            @Html.AntiForgeryToken()
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink(User.Identity.GetUserName(), "Index", "Workout", null, new {title = "Manage"})
                </li>
                <li>
                    <button type="submit" class="btn btn-default navbar-btn">Log off</button>
                </li>
            </ul>
        }
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn navbar-btn", id = "registerLink" })</li>
            <li>@Html.ActionLink("Log in", "Login", "Account", null, new { @class = "btn navbar-btn", id = "loginLink" })</li>
        </ul>
    }
        
