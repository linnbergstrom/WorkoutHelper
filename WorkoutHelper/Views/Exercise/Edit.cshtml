@model WorkoutHelper.ViewModels.ExerciseViewModel


<div class="col-xs-6 col-md-2">
    <div class="">
        @*<h4>@ViewBag.SideTitle</h4>
            <h5>@ViewBag.SideMessage</h5>*@
    </div>

    @if (ViewBag.ShowNote == "true")
    {
        <div class="panel panel-info">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <h6></h6>
            </div>
        </div>
    }
</div>


<div class="col-xs-6 col-md-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MainMuscle, new { @class = "control-label" })
                <div class="">
                    @Html.EnumDropDownListFor(model => model.MainMuscle, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.EnumDropDownListFor(model => model.Level, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Force, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.EnumDropDownListFor(model => model.Force, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @rows = "5" })
                    @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Public, htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.CheckBoxFor(model => model.Public, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    }
    <div class="col-md-12">
        @Html.ActionLink("Back to List", "Index")
    </div>
